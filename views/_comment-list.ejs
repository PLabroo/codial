<li id="comment-<%=comment._id%>">
    <p>
        <!-- if user is signed in & logged in user has permission to delete -->
        <% if(locals.user && locals.user.id==comment.user.id){%>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%=comment._id%>">DELETE</a>
            </small>
        <%} %>
        <%=comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
    </p>
    <br>
    <p>
        <!-- study about data attribute -->
        <small>
            <% if(locals.user){%>
                <a href="/likes/toggle/?id=<%=comment._id%>&type=Comment" class="toggle-like-button"
                    data-likes="<%=comment.likes.length %>">
                    <%=comment.likes.length %> Likes
                </a>
            <%}else{%>
                <%=comment.likes.length %> Likes
            <%}%>
        </small>
    </p>
</li>