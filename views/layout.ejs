        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        <%- style %>
    </head>
    <body>
        <%- include('_header'); %>
        <%- body %>
        <%- include('_footer'); %>

        <%- script %>
        <script>
            <% if (flash.success && flash.success.length > 0) {%>
                new Noty({
                    theme:'relax',
                    text: '<%=flash.success %>',
                    type:'success',
                    layout:'topCenter',
                    timeout:1500
                    }).show();
            <%}%> 
            <% if (flash.error && flash.error.length > 0) {%>
                    new Noty({
                        theme: 'relax',
                        text: '<%=flash.error %>',
                        type: 'error',
                        layout: 'topCenter',
                        timeout: 1500
                    }).show();
            <%}%> 
        </script>
    </body>
</html>